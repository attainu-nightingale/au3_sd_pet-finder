
<div class="container-fluid" id="wrapper-container">

    <div id="currentSection"></div>

    <div class="container-fluid  mb-5 ">
        {{!-- top image  --}}
        <div class="row mb-5">
            <div class="col-12 col-lg-12 col-xl-12 col-sm-12 col-md-12">
                <div class="jumbotron-fluid">
                    {{#if userprof.profile_url}}
                    <div class="prof-image card-img-top" style="background-image:url({{userprof.profile_url}});">
                        {{else}}
                        <div class="prof-image card-img-top" style="background-image:url(https://cdn.pixabay.com/photo/2019/08/19/07/45/pets-4415649__340.jpg
                    );">
                            {{/if}}
                            <div class="profile-tab text-center">
                                <p class="pt-3 name">{{userprof.firstname}} {{userprof.lastname}}</p>
                                <p><i class="fa fa-envelope mr-1 email"></i>{{userprof.email}}</p>
                                <p><i class="fa fa-user mr-1 username"></i>{{userprof.username}}</p>
                                <p><a data-toggle="modal" data-target="#exampleModal" href="#" class="text-white"
                                        data-toggle="tooltip" data-placement="bottom" title="Edit profile">
                                        <i class="fa fa-pencil text-white"></i> Edit</a></p>
                                <p class="mb-5">
                                    <a data-toggle="modal" data-target="#exampleModalUpload" href="#"
                                        class="text-white mb-5" data-toggle="tooltip" data-placement="bottom"
                                        title="Change profile">
                                        <i class="fa fa-upload mr-1 text-white"></i>Upload</a>
                                </p>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row " id="Uploads">
                {{!-- <div class="row bg-primary"> --}}
                <div class="col-12 col-lg-12 col-md-12 col-sm-12 ">
                    <div class="row text-center">
                        <div class="col-12 col-lg-12 col-md-12 col-sm-12 ">
                            <div class="alert alert-primary py-3 mt-5" style="background-color:#231942; color:white; ">
                                Uploaded Pets</div>
                        </div>
                    </div>
                </div>
                {{!-- </div> --}}
                <div class="col-12 col-lg-12 col-md-12 col-sm-12">
                    <div class="row">
                        {{#each petAdded}}
                        <div class="col-md-4 col-lg-4 col-xl-3 col-sm-6 col-12 mt-3">
                            <div class="card  petAddedCard">
                                <div class="images card-img-top inner" style="background-image:url(
                                                {{this.url}});">
                                    <button class="btn btn-outline-secondary pet-pics" value="{{this._id}}"
                                        pub_id="{{this.public_id}}" data-toggle="modal"
                                        data-target="#petsModalUpload"><i class="fa fa-camera"></i></button>

                                    <a href="/userprofile/update/petinfo?name={{this.name}}&breeds={{this.breeds}}&trained={{this.trained}}&vaccinated={{this.vaccinated}}&petage={{this.age}}&color={{this.color}}&location={{this.location}}&description={{this.description}}&id={{this._id}}"
                                        class="btn btn-secondary ml-3" style="color:#5E548E"><i class="fa fa-pencil"
                                            style="font:18px; color:white"></i></a>

                                    <a href="#" id={{this._id}} value={{this.public_id}}
                                        class="btn delete btn-danger ml-3"><i class="fa fa-trash"
                                            style="font:18px; color:white;"></i></a>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{this.name}},{{this.breeds}}</h5>

                                    <p class="card-text">
                                        {{#if this.trained}}
                                        Trained
                                        {{/if}}
                                        {{#if this.vaccinated}}
                                        &nbspvaccinated
                                        {{/if}}
                                    </p>
                                    <p class="card-text"><i class="fa fa-address-book-o"
                                            aria-hidden="true"></i>&nbsp{{this.location}}</p>


                                </div>
                                <div class="card-footer">
                                    <span class="like-container">
                                        <button type="submit" value="{{this._id}}" class="btn hvr-glow like-click"><i
                                                class="fa fa-heart" {{#if this.liked}} { style="color:red;" }
                                                {{/if}}></i></button>
                                        <span class="likes">{{this.likes_count}}</span>
                                    </span>
                                    <a href="/petprofile/{{this._id}}" class="btn more btn-outline-primary ml-3"><i
                                            class="fa fa-info px-1"></i></a>

                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>

            <div class="row " id="Liked">
                {{!-- <div class="row bg-primary"> --}}
                <div class="col-12 col-lg-12 col-md-12 col-sm-12 ">
                    <div class="row text-center">
                        <div class="col-12 col-lg-12 col-md-12 col-sm-12 ">
                            <div class="alert alert-primary py-3 mt-5" style="background-color:#231942; color:white; ">
                                Liked Pets</div>
                        </div>
                    </div>
                </div>
                {{!-- </div> --}}
                <div class="col-12 col-lg-12 col-md-12 col-sm-12">
                    <div class="row">
                        {{!--petAdded replaces with the petLiked --}}
                        {{#each petLiked}}
                        <div class="col-md-4 col-lg-4 col-xl-3 col-sm-6 col-12 mt-3">
                            <div class="card petLiked">
                                <div class="images card-img-top" style="background-image:url(
                                                {{this.url}});">
                                    <a href="#" id={{this._id}} value={{this.public_id}}
                                        class="btn delete btn-danger "><i class="fa fa-trash"
                                            style="font:18px; color:white;"></i></a>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{this.name}},{{this.breeds}}</h5>

                                    <p class="card-text">
                                        {{#if this.trained}}
                                        Trained
                                        {{/if}}
                                        {{#if this.vaccinated}}
                                        &nbspvaccinated
                                        {{/if}}
                                    </p>
                                    <p class="card-text"><i class="fa fa-address-book-o"
                                            aria-hidden="true"></i>&nbsp{{this.location}}</p>
                                </div>
                                <div class="card-footer">
                                    <span class="like-container">
                                        <button type="submit" value="{{this._id}}" disliked="{{this._id}}"
                                            class="btn hvr-glow btn-sm like-click"><i class="fa fa-heart" { style="color:red;"
                                                }></i></button>

                                        <span class="likes">{{this.likes_count}}</span>
                                    </span>

                                    <a href="#" class="btn more btn-sm btn-outline-primary ml-3 btn-adopt"
                                        value="{{this._id}}">Adopt</a>
                                    <a href="/petprofile/{{this._id}}" class="btn btn-sm more btn-outline-primary ml-3"><i
                                            class="fa fa-info p-1" aria-hidden="true"></i></a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>

            </div>
        </div>
        <div class="mx-auto">
            <button class="btn btn-primary text-white mt-5 py-2 ml-2" id="goToTop">Go to top</button>
            <button class="btn btn-primary text-white mt-5 py-2 ml-2" id="goToUploads">Go to uploads</button>
            <button class="btn btn-primary text-white mt-5 py-2 ml-2" id="goToLiked">Go to liked</button>
        </div>
    </div>
</div>
{{!-- modal form for update user info  --}}
<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Info</h5>&nbsp
                <span class="text-muted text-danger"> * required field</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="userUpdateModalForm">
                <form id="userProfile" style="border:1px solid #ccc" enctype="multipart/form-data">
                    <div class="form-container">
                        <label for="firstname"><b>Firstname</b> <span class="text-muted text-danger">
                                *</span></label>
                        <input type="text" class="updateUserInfo" placeholder="Enter first name..." id="firstname"
                            name="firstname" value="{{userprof.firstname}}" required>

                        <label for="lastname"><b>Lastname</b><span class="text-muted text-danger">
                                *</span></label>
                        <input type="text" class="updateUserInfo" value='{{userprof.lastname}}'
                            placeholder="Enter lastname..." id="lastname" name="lastname" required>


                        <label for="email"><b>Email</b><span class="text-muted text-danger">
                                *</span></label>
                        <input type="email" class="updateUserInfo" value='{{userprof.email}}' placeholder="Enter email.."
                            id="email" name="username" required>



                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="updateInfo">Update</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

{{!-- profile changing modal form --}}
<div class="modal" id="exampleModalUpload" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change profile pic</h5>&nbsp
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/userprofile/pic/update" id="profile-upload" onsubmit="return Validate(this)" style="border:1px solid #ccc"
                    enctype="multipart/form-data">
                    <div class="form-container">
                        <label for="File"><b>Choose Profile</b> <span class="text-muted text-danger">
                                *</span></label>
                        <input type="file" class="updateUserInfo" placeholder="Enter first name..." id="File"
                            name="profile_url" required>
                        <input type="text" name="public_id" class="d-none" value={{userprof.public_id}}>
                        <button type="submit" class="btn btn-primary btn-block py-3" id="updateInfo">Update</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


{{!-- pets modal pic update form --}}
<div class="modal" id="petsModalUpload" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change pet pic</h5>&nbsp
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/userprofile/pets/pic/update" id="pets-images" onsubmit="return Validatepet(this)" style="border:1px solid #ccc"
                    enctype="multipart/form-data">
                    <div class="form-container">
                        <label for="pet_profile"><b>Choose Pet</b> <span class="text-muted text-danger">
                                *</span></label>
                        <input type="file" class="updateUserInfo" placeholder="Enter first name..." id="pet_profile"
                            name="petpic_url" required>
                        <input type="text" name="public_id" class="d-none" value='{{user.public_id}}'>
                        <button type="submit" class="btn btn-primary btn-block py-3" id="updateInfo">Update</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


