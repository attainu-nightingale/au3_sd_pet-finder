<div class="container mt-5">
    <h1 class="display-3">Search Cat by Breed</h1>
    <form action="/cats" method="GET">
        <div class="form-group">
            <select name="breed" id="breed_select" class="custom-select breed">
                <option></option>
            </select>
        </div>
        <button class="btn btn-outline-dark hvr-grow" id="search">Search</button>
    </form>
</div>
<div class="container result">
    <div class="row mt-5">
        <div class="col-md-7">
            <div class="jumbotron">
                <p class="lead">Select a cat breed to get info.</p>
            </div>
        </div>
        <div class="col-md-5 img-fluid">
            <div id="catImg"></div>
        </div>
    </div>
</div>


{{!-- MongoDB Search Results --}}
<div class="row mt-4 ml-3 mr-3 mb-5">
    {{#each pets}}
    <div class="col-md-4 col-xl-3 col-lg-3 col-12 col-sm-6 mb-5">
        <div class="card">
            <img src="{{this.url}}" id="cardImg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">Age: {{this.age}}</p>
                <p class="card-text">Breed: {{this.breeds}}</p>
            </div>
            <div class="card-footer">
                <a type="button" class="btn btn-sm ml-2 detailsBtn" href="/petprofile/{{this._id}}">Details</a>
                <a type="button" class="btn btn-sm btn-primary ml-2 adopt" href="/adopt/{{this._id}}">Adopt</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>






{{!-- MongoDB Search Results End--}}